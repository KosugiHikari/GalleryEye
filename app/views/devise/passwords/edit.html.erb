<div class="container p-5">
  <h3 class="text-center mb-3">パスワード変更</h3>
  <div class="row d-flex justify-content-center">
    <div class="col-5 d-flex justify-content-center pt-4 pb-4 border border-secondary rounded bg-white">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :新しいパスワード %><br />
          <% if @minimum_password_length %>
            <p class="text-primary"><i class="fas fa-check"></i> <%= @minimum_password_length %>文字以上の半角英数字</p>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", size: 50, class: "form-control" %>
        </div>

        <div class="field mt-3">
          <%= f.label :新しいパスワード（確認用） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 50, placeholder: '確認の為、新しいパスワードを再度入力してください', class: "form-control" %>
        </div>

        <div class="actions mt-4">
          <%= f.submit "パスワードを変更する", class: "form-control btn btn-info" %>
        </div>

        <div class="text-center border-top mt-3 pt-3">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>