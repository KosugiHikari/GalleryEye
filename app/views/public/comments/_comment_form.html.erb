<div class="col-7">
<%= form_with model:[post, comment], local: false do |f| %>
  <%= render 'errors', post: f.object %>
  <%= f.text_area :comment, rows: '5', cols:'40', placeholder: "コメントを記入", class: "comment_textarea form-control" %>
  <div class="d-flex justify-content-center m-3"><%= f.submit "送信する", class: 'btn btn-success' %></div>
<% end %>
</div>