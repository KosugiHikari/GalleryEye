<div class="conteiner">
  <h1>投稿詳細</h1>
  <div class="row">
    <!--投稿画像-->
    <div class="col text-right">
      <% if @post.image.attached? %>
        <%= image_tag @post.image.variant(resize: "300x300") %>
      <% else %>
        <%= image_tag 'noimage', size: "300x300" %>
      <% end %>
    </div>
    <div class="col">
      <h4>美術展情報</h4>
      <!--いいねボタン-->
      <div id="like_buttons_<%= @post.id %>">
        <%= render 'public/likes/like', post: @post %><br>
      </div>
      美術展名：<%= @post.art_exhibition_name %><br>
      美術館名<%= @post.gallery_name %><br>
      会期：<%= @post.start_date %> ~ <%= @post.end_date %><br>
      入場料：<%= @post.admission %>円<br>
      住所：<%= @post.address %><br>
      撮影可否：<%= @post.shooting_availability_i18n %>
    </div>
  </div>
  <!--ユーザー情報-->
  <div class="row">
    <div class="col-6 text-right">
      <%= link_to user_path(@post.user) do %>
      <%= image_tag @post.user.get_profile_image(100,100) %><br>
      <p><%= @post.user.name %></p>
      <% end %>
    </div>
    <!--ユーザーによる感想-->
    <div class="col-6 text-center">
    <p>ここに注目</p>
    <%= @post.point %><br>
    <%= @post.body %>
    </div>
  </div>
  <!--編集ボタン-->
  <div class="text-center">
    <% if @post.user == current_user %>
      <%= link_to '編集', edit_post_path(@post.id) %>
    <% end %>
  </div>

  <!--コメント表示-->
  <p>コメント件数：<%= @post.comments.count %></p>
  <div class="text-center">
    <div class="row">
      <% @post.comments.each do |comment| %>
        <div class="col">
          <%= link_to user_path(comment.user) do %>
            <%= image_tag comment.user.get_profile_image(100,100) %>
            <%= comment.user.name %>
          <% end %>
        </div>
        <div class="col text-relt">
          <p><%= comment.created_at.strftime('%Y/%m/%d') %></p>
          <p><%= comment.comment %></p>
          <% if comment.user == current_user %>
            <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, "data-confirm" => "本当に削除しますか？" %>
          <% end %>
        </div>
      <% end %>
    </div>
    <!--コメントボックス-->
    <div>
      <%= form_with model: [@post, @comment] do |f| %>
        <%= f.text_area :comment, rows: '5', cols:'40', placeholder: "コメントを記入" %><br>
        <%= f.submit "送信する" %>
      <% end %>
    </div>
  </div>
</div>