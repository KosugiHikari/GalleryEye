<div class="conteiner">
  <div class="mb-3">
    <%= flash[:notice] %>
  </div>
  <div class="row">
    <!--投稿画像-->
    <div class="col text-right">
      <%= render 'post_image', post: @post %>
    </div>
    <div class="col">

      <!--開催状況-->
      <%= render 'date', post: @post %>

      <h4>美術展情報</h4>
      <!--いいねボタン（ログインユーザーのみ。非ログイン時はいいね数表示）-->
      <% if user_signed_in? %>
        <div id="like_buttons_<%= @name %>_<%= @post.id %>">
          <%= render 'public/likes/like', post: @post, name: @name %><br>
        </div>
      <% else %>
        <p><i class="fas fa-heart" style="color: gray;"></i><%= @post.likes.count %></p>
      <% end %>

      美術展名：<%= @post.art_exhibition_name %><br>
      美術館名<%= @post.gallery_name %><br>
      会期：<%= @post.start_date %> ~ <%= @post.end_date %><br>
      入場料：<%= @post.admission %>円<br>
      地域：<%= @post.holding_area %><br>
      住所：<%= @post.address %><br>
      撮影可否：<%= @post.shooting_availability_i18n %>
      <!--登録されているタグ-->
      <% if @tags.present? %>
      <div class="d-flex flex-wrap">
        <div class"row">
          <% @tags.each do |tag| %>
            <%= link_to "##{tag.name}", tags_path(tag: tag.name), class: "btn btn-outline-secondary rounded-pill" %>
          <% end %>
        </div>
      </div>
      <% else %>
        <p>登録されているタグはありません</p>
      <% end %>
    </div>
  </div>
  <!--ユーザー情報-->
  <div class="row">
    <div class="col-6 text-right">
      <%= link_to user_path(@post.user) do %>
      <%= image_tag @post.user.get_profile_image(100,100) %><br>
      <p><%= @post.user.name %></p>
      <% end %>
    </div>
    <!--ユーザーによる感想-->
    <div class="col-6 text-center">
    <p>ここに注目</p>
    <%= @post.point %><br>
    <%= @post.body %>
    </div>
  </div>
  <!--編集ボタン-->
  <div class="text-center">
    <% if @post.user == current_user %>
      <%= link_to '編集', edit_post_path(@post.id) %>
    <% end %>
  </div>

    <!--コメント表示-->
    <div class="comments">
      <%= render 'public/comments/comment', post: @post %>
    </div>

    <!--コメントボックス-->
    <%= render 'public/comments/comment_form', post: @post, comment: @comment %>
  </div>
</div>