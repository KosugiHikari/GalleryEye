<div class="sign_in">
  <div class="container">
    <div class="mb-3 bg-info text-center">
    <%= flash[:notice] %>
    </div>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="row d-flex justify-content-center">
      <div class="col-5 d-flex justify-content-center h3 mb-3">
        新規会員登録
      </div>
    </div>
      <div class="row d-flex justify-content-center">
        <div class="col-5 d-flex justify-content-center pt-3 pb-3 border border-secondary rounded">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="field mt-3">
              <%= f.label :ユーザーネーム %><br />
              <%= f.text_field :name, autofocus: true, size: 40  %>
            </div>

            <div class="field mt-3">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autocomplete: "email", size: 40, placeholder: 'sample@example.com' %>
            </div>

            <div class="field mt-3">
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              (<%= @minimum_password_length %> 文字以上の半角英数字)
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", size: 40  %>
            </div>

            <div class="field mt-3">
              <%= f.label :確認用パスワード %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 40  %>
            </div>

            <div class="actions mt-3">
              <%= f.submit "登録する", class: "form-control btn btn-info"  %>
            </div>
            <div class="text-center border-top mt-4 pt-3 pb-3">
              <%= render "public/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>

  </div>
</div>
