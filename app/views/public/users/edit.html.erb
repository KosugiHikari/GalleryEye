<div class="container">
  <div class="row">
    <div class="col">
    <h3>プロフィール編集</h3>
    </div>
    <div class="col">
      <%= link_to leavecheck_path do %>
        <h3>退会</h3>
      <% end %>
    </div>
  </div>

  <%= form_with model: @user do |f| %>
    <div class="ProfileImage">
      <label for="inputImage">ProfileImage</label>
      <%= f.file_field :profile_image, accept: "image/*" %>
    </div>

    <!--ゲストユーザーでログインした場合には編集できない-->
    <% if @user.name == "guestuser" %>
      UserName：<%= @user.name %>
    <% elsif %>
      <div class="UserName">
        <label for="inputName">UserName</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
      </div>
    <% end %>

    <div class="Int">
      <label for="Introduction">Introduction</label>
      <%= f.text_field :introduction, placeholder:"自己紹介文" %>
    </div>
    <%= f.submit "変更を保存" %>
  <% end %>
</div>