<div class="container m-5">
  <h1>マイページ</h1>
  <div class="row">
    <div class="col-3 text-center">
      <%= image_tag @user.get_profile_image(100,100), class: "rounded-circle" %><br>
      <strong><%= @user.name %></strong><br>
      
      <!--フォロー・フォロワー-->
      <%= link_to user_followings_path(@user) do %>
        フォロー<%= @user.followings.count %>
      <% end %>
      <%= link_to user_followers_path(@user) do %>
        フォロワー<%= @user.followers.count %><br>
      <% end %>
      <%= @user.introduction %><br>

      <!--フォローボタン-->
      <% unless @user == current_user %>
        <% if current_user.following?(@user) %>
          <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
        <% end %>
      <% end %>

      <!--プロフィール編集ボタン-->
      <% if @user == current_user %>
        <%= link_to "プロフィール編集", edit_user_path(@user.id) %>
      <% end %>

    </div>
    <% @posts.each do |post| %>
      <div class="col-9">
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.image, size:'300x300' %><br>
        <% end %>
        <%= post.art_exhibition_name %><br>
        <%= post.gallery_name %><br>
        <%= post.start_date %> ~ <%= post.end_date %><br>
        <%= post.point %>
      </div>
    <% end %>
  </div>
</div>