<div class="container m-5">
  <h1>マイページ</h1>
  <div class="row">
    <div class="col-3 text-center">
      <%= image_tag @user.get_profile_image(100,100), class: "rounded-circle" %><br>
      <strong><%= @user.name %></strong><br>

      <!--フォロー・フォロワー-->
      <%= link_to user_followings_path(@user) do %>
        フォロー<%= @user.followings.count %>
      <% end %>
      <%= link_to user_followers_path(@user) do %>
        フォロワー<%= @user.followers.count %><br>
      <% end %>
      <%= @user.introduction %><br>

      <!--いいね一覧リンク-->
      <%= link_to "いいね一覧", likes_user_path(@user) %><br>

      <!--自己紹介文-->
      <%= @user.introduction %><br>

      <!--フォローボタン-->
      <div id="follow-<%= @user.id %>">
        <%= render 'public/relationships/follow', user: @user %>
      </div>

      <!--プロフィール編集ボタン-->
      <% if @user == current_user %>
        <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      <% end %>

    </div>
    <% @posts.each do |post| %>
      <div class="col-9 text-center">
        <%= link_to post_path(post.id) do %>
          <%= render 'public/posts/post_image', post: post %>
        <% end %>
        <h3><%= post.art_exhibition_name %></h3>
        <p><%= post.gallery_name %></p>
        <p><%= post.start_date %> ~ <%= post.end_date %></p>
        <p><%= post.point %></p>
        <p><%= link_to "#{post.comments.count}コメント", post_path(post.id) %></p>
      </div>
    <% end %>
  </div>
</div>