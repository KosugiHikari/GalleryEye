<% if post.liked?(current_user) %>
  <%= link_to post_likes_path(post, name: name), method: :delete, remote: true do %>
    <i class="fas fa-heart" style="color: red;"></i>
    <%= post.likes.count %>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post, name: name), method: :post, remote: true do %>
    <i class="fas fa-heart" style="color: gray;"></i>
    <%= post.likes.count %>
  <% end %>
<% end %>