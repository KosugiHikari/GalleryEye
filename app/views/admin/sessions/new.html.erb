<div class="admin p-5">
  <div class="container">
    <h5 class="alert text-center text-danger"><%= alert %></h5>
    <div class="mb-3 text-center">
      <%= flash[:notice] %>
    </div>
    <div class="row d-flex justify-content-center">
      <div class="col-5 d-flex justify-content-center bg-dark text-light pt-2 pb-2 h4">
        <i class="fas fa-unlock-alt"></i>
      </div>
    </div>
    <div class="row d-flex justify-content-center">
      <div class="col-5 d-flex justify-content-center pt-3 pb-3 shadow-sm">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", size: 30, placeholder: 'sample@example.com', class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, required: true, autocomplete: "current-password", size: 30, class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-2 text-center">
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン状態を維持する %>
          </div>
        <% end %>

        <div class="actions d-flex justify-content-center mt-2">
          <%= f.submit "ログイン", class: "btn btn-outline-dark mt-1" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
</div>