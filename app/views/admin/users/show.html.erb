<div class="container">
  <div class="mb-3">
    <%= flash[:notice] %>
  </div>
  <h3 class="mb-3">ユーザー詳細ページ</h3>
  <div class="row">
    <div class="col-9">
      <table class="table text-left">
        <tbody>
          <%= image_tag @user.get_profile_image(100,100), class: "rounded-circle" %>
          <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>ユーザーネーム</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>性別</th>
            <td><%= @user.sex_i18n %></td>
          </tr>
          <tr>
            <th>生年月日</th>
            <td><%= @user.birthdate %></td>
          </tr>
          <tr>
            <th>自己紹介文</th>
            <td><%= @user.introduction %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <% if @user.is_deleted == false %>
                <strong><p class="text-success">有効</p></strong></td>
              <% elsif %>
                <strong><p class="text-secondary">退会</p></strong>
              <% end %>
            </td>
           </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row d-flex justify-content-start">
    <div class="col-4">
      <div class="form-group">
        <div class="mb-3">
          <%= link_to edit_admin_user_path(@user) do %>
            <button class="btn btn-success form-control" type="submit">編集する</button>
          <% end %>
        </div>
        <div>
          <%= link_to admin_user_posts_path(@user) do %>
            <button class="btn btn-outline-secondary form-control" type="submit"><%= @user.name %>さんの投稿履歴一覧</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>