<div class="conteiner">
  <div class="row">
    <!--投稿画像-->
    <div class="col text-right">
      <%= render 'public/posts/post_image', post: @post %>
    </div>
    <div class="col">

      <!--公開範囲-->
      <% if @post.is_draft == false %>
        <p class="btn btn-primary">公開中</p>
      <% else %>
        <p class="btn btn-danger">非公開</p>
      <% end %>

      <div class="d-flex">
        <h4>美術展情報</h4>
        <%= render 'date', post: @post %>
      </div>
      美術展名：<%= @post.art_exhibition_name %><br>
      美術館名<%= @post.gallery_name %><br>
      会期：<%= @post.start_date %> ~ <%= @post.end_date %><br>
      入場料：<%= @post.admission %>円<br>
      住所：<%= @post.address %><br>
      撮影可否：<%= @post.shooting_availability_i18n %>
    </div>
  </div>
  <!--ユーザー情報-->
  <div class="row">
    <div class="col-6 text-right">
      <%= link_to user_path(@post.user) do %>
      <%= image_tag @post.user.get_profile_image(100,100), size: "100x100" %><br>
      <p><%= @post.user.name %></p>
      <% end %>
    </div>
    <!--ユーザーによる感想-->
    <div class="col-6 text-center">
    <p>ここに注目</p>
    <%= @post.point %><br>
    <%= @post.body %>
    </div>
  </div>
  <div class="text-center">
    <%= link_to '削除', admin_post_path(@post.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
  </div>
  <!--コメント表示-->
    <div class="comments">
      <%= render 'public/comments/comment', post: @post %>
    </div>
</div>