<% if post.is_draft == false %>
  <% if post.start_date <= Date.today && Date.today <= post.end_date %>
    <span class="rounded text-light bg-danger p-1 ml-3">開催中</span>
  <% elsif post.start_date > Date.today %>
    <span class="rounded bg-info text-light p-1 ml-3">開催予定</span>
  <% else post.end_date < Date.today %>
    <span class="rounded bg-secondary text-light p-1 ml-3">会期終了</span>
  <% end %>
<% end %>